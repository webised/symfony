{# src/OC/PlateformBundle/Ressources/views/Advert/index.html.twig #}

{% extends "@OCPlatform/layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block ocplatform_body %}

  <h2>Liste des annonces</h2>
  <ul>
    {%  for advert in listAdvert %}
      <li>
        <a href="{{ path('oc_platform_view', {'id': advert.id}) }}"> {{ advert.title }}</a>
        par {{ advert.author }}, le {{ advert.date|date('d/m/y') }}
      </li>
      {% else  %}
        <li> Pas encore d'annonce</li>
    {%  endfor %}
  </ul>

{% endblock %}